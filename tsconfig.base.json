{
    "compilerOptions": {
        "strict": true,
        "target": "es2015",
        "lib": ["DOM", "ESNext"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "jsx": "react-jsx"
    },
    "exclude": ["**/node_modules", "**/dist", "**/__tests__/**"]
}

        "type": "git",
        "url": "git+https://github.com/nil-design/nil-design.git"
    },
    "bugs": {
        "url": "https://github.com/nil-design/nil-design/issues"
    },
    "engines": {
        "node": ">=20.18.0"
    },
    "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39",
    "scripts": {
        "prepare": "husky",
        "build": "pnpm -r --filter @nild/* build",
        "api": "pnpm -r --filter @nild/* api",
        "docs:dev": "vitepress dev docs",
        "docs:build": "vitepress build docs",
        "docs:preview": "vitepress preview docs",
        "components:dev": "pnpm --filter @nild/components dev",
        "components:build": "pnpm --filter @nild/components build",
        "components:api": "pnpm --filter @nild/components api",
        "components:test": "pnpm --filter @nild/components test",
        "hooks:dev": "pnpm --filter @nild/hooks dev",
        "hooks:build": "pnpm --filter @nild/hooks build",
        "icons:dev": "pnpm --filter @nild/icons dev",
        "icons:build": "pnpm --filter @nild/icons build",
        "icons:api": "pnpm --filter @nild/icons api",
        "shared:build": "pnpm --filter @nild/shared build",
        "shared:dev": "pnpm --filter @nild/shared dev",
        "ci:version": "pnpm api && pnpm changeset version",
        "ci:publish": "pnpm -r publish --access public --registry=https://registry.npmjs.org",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix"
    },
    "devDependencies": {
        "@changesets/cli": "2.29.4",
        "@commitlint/cli": "19.8.0",
        "@commitlint/config-conventional": "19.8.0",
        "@commitlint/types": "19.8.0",
        "@eslint/js": "9.23.0",
        "@nild/components": "workspace:*",
        "@nild/hooks": "workspace:*",
        "@nild/icons": "workspace:*",
        "@nild/shared": "workspace:*",
        "@tailwindcss/vite": "4.1.7",
        "@testing-library/jest-dom": "6.6.3",
        "@testing-library/react": "16.3.0",
        "@types/lodash-es": "4.17.12",
        "@types/react": "18.2.0",
        "@types/react-dom": "18.2.0",
        "@vitejs/plugin-react": "4.4.1",
        "esbuild": "0.25.5",
        "eslint": "9.23.0",
        "eslint-config-prettier": "10.1.0",
        "eslint-plugin-import": "2.31.0",
        "eslint-plugin-prettier": "5.2.3",
        "eslint-plugin-react": "7.37.4",
        "eslint-plugin-react-hooks": "5.2.0",
        "globals": "15.15.0",
        "gray-matter": "4.0.3",
        "husky": "9.1.7",
        "jsdom": "26.1.0",
        "lint-staged": "15.4.3",
        "lodash-es": "4.17.21",
        "markdown-it-container": "4.0.0",
        "mermaid": "11.6.0",
        "postcss": "8.5.3",
        "postcss-nested": "7.0.2",
        "prettier": "3.5.3",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-live": "4.1.8",
        "stylelint": "16.19.1",
        "stylelint-config-standard": "38.0.0",
        "tailwindcss": "4.1.7",
        "typedoc": "0.28.4",
        "typescript": "5.8.2",
        "typescript-eslint": "8.26.1",
        "vite": "5.4.14",
        "vite-plugin-dts": "4.5.3",
        "vite-plugin-svgr": "4.3.0",
        "vitepress": "1.6.3",
        "vitest": "3.1.2"
    }

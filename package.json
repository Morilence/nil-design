    "type": "module",
    "description": "A Diversified React Development Library",
    "author": {
        "name": "Morilence",
        "email": "1280659615@qq.com"
    },
    "license": "Apache-2.0",
    "homepage": "https://nil-design.github.io/nil-design/zh-CN/",
